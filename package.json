{
    "name": "darkside",
    "version": "0.0.0",
    "description": "Dark side of the monitor",
    "keywords": [
        "backlight","serial","tty","UART","led","arduino"
    ],
    "repository": "https://github.com/tong/atom-darkside",
    "license": "MIT",
    "engines": {
        "atom": ">=1.20.0 .0 <2.0.0"
    },
    "main": "./lib/darkside",
    "consumedServices": {
        "status-bar": {
            "versions": {
                "^1.1.0": "consumeStatusBar"
            }
        }
    },
    "providedServices": {
        "backlight.provider": {
            "versions": {
                "0.0.0": "provideService"
            }
        }
    },
    "dependencies": {
        "serialport": "6.0.4"
    },
    "configSchema": {
        "devices": {
            "title": "Devices",
            "description": "IDs of controller devices allowed to connect",
            "type": "integer",
            "minimum": 0,
            "default": 1,
            "order": 1
        },
        "baud_rate": {
            "title": "Baud Rate",
            "description": "The data rate in bits per second (baud) for serial data transmission.",
            "type": "integer",
            "default": 115200,
            "order": 2
        },
        "startdelay": {
            "title": "Activation Delay",
            "description": "The delay in seconds before searching for devices.",
            "type": "integer",
            "minimum": 0,
            "default": 1,
            "order": 3
        }
    }
}
